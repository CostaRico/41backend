= form_for [:adminka, @brand], html: { class: "form-horizontal" } do |f|
  - if @brand.errors.any?
    .form-group
      .col-sm-offset-2.col-sm-10
        %ul
          - @brand.errors.full_messages.each do |message|
            %li= message
  .form-group
    %label.col-sm-2.control-label{ for: 'title' } Title
    .col-sm-5
      = f.text_field :title, class: 'form-control'
  .form-group
    %label.col-sm-2.control-label{ for: 'description' } Description
    .col-sm-5
      = f.text_field :description, class: 'form-control'
  .form-group
    .col-sm-5.col-md-offset-2
      = f.submit (@brand.new_record? ? 'Create' : 'Save'), class: 'btn btn-default'
